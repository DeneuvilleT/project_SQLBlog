<main>

   <a href="/admin">admin panel</a>
   <section>

      <h2>Editer un article</h2>
      <form action="/edit" method="post">

         <label for="title">Titre de l'article :</label>
         <input type="text" name="title" value="<%= data[0].Title %>"> 

         <label for="contents">contenu de l'article :</label>
         <textarea name="contents"><%= data[0].Contents %></textarea>

         <select name="user">
            <% if (author.length !==0){ %>
               <% author.forEach((elem)=>{ %>
                  <option value="<%= elem.Id %>">
                     <%= elem.FirstName %>
                        <%= elem.LastName %>
                  </option>
                  <% }) %>
                     <% } %>
         </select>
         
         <select name="category">
            <% if (category.length !==0){ %>
               <% category.forEach((elem)=>{ %>
                  <option value="<%= elem.Id %>">
                     <%= elem.Name %>
                  </option>
                  <% }) %>
                     <% } %>
         </select>

         <input class="hide" type="text" value="<%= data[0].Id %>" name="postId">

         <input type="submit" value="Mettre Ã  jour le com'!">

      </form>

   </section>

</main>